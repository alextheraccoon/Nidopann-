doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='https://fonts.googleapis.com/css?family=Raleway|Julius+Sans+One', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/style.min.css')
  body
    .lang-chooser
      if lang == 'it'
        a(href='/en'+path)
          img(src='/img/icons/it.svg' width='50')
      else if lang == 'en'
        a(href='/de'+path)
          img(src='/img/icons/gb.svg' width='50')
      else
        a(href='/en'+path)
          img(src='/img/icons/de.svg' width='50')
    block content
